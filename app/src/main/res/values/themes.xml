<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/light_orange</item>
    </style>

    <style name="CustomEditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
        <!-- Other text attributes can be added here -->
    </style>


    <style name="Theme.SHAPESHIFT" parent="Base.Theme.SHAPESHIFT" />
</resources>