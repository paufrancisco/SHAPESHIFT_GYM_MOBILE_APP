<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="760dp"
    tools:context=".fragments.Login">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/bg_login"
                    android:scaleType="centerCrop"
                    />


                <ImageView
                    android:id="@+id/img2"


                    android:layout_width="match_parent"
                    android:layout_height="460dp"
                    android:layout_marginTop="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_login_bg2" />


        </FrameLayout>

        <EditText
            android:id="@+id/email"

            android:drawableStart="@drawable/ic_email"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:hint="Email"
            android:drawablePadding="6sp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="250dp"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/border1"

            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/email"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/password"

            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/border1"
            android:layout_marginStart="30dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="6sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="3dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/border2"

            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/password"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/forgot"

            android:text="Forgot Password?"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/border2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btn_Login"


            android:text="Login"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_below="@+id/forgot"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_start"
            android:drawableEnd="@drawable/ic_arrow_forward"
            />

        <ProgressBar
            android:id="@+id/progressBar"

            android:layout_toLeftOf="@+id/btn_Login"
            android:layout_below="@+id/forgot"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?"
            android:textColor="@color/white"
            android:layout_below="@id/btn_Login"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"

            />

        <TextView
            android:id="@+id/signup"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new account?"
            android:textColor="@color/light_blue"
            android:layout_below="@id/btn_Login"
            android:layout_marginTop="30dp"
            android:layout_marginStart="200dp"

            />
</RelativeLayout>

</FrameLayout>