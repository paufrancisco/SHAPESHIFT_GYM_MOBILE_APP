<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragments.Challenge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/darkgray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAMIR CAMPOS"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white"
                    android:layout_margin="10sp"
                    />

                <ImageView
                    android:id="@+id/ivIcon"

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circular_progress_drawable"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"

                    />

                <TextView

                    android:id="@+id/current"
                    android:layout_below="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Points:"
                    android:textSize="15sp"
                    android:textColor="@color/light_orange"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="12dp"

                    />

                <TextView

                    android:id="@+id/displayPoints"

                    android:layout_toRightOf="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_marginStart="4dp"
                    android:layout_below="@+id/uname"
                    android:layout_marginTop="7dp"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>





        <TextView
            android:id="@+id/challenge"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/light_orange"
            android:layout_below="@+id/cv1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/challenge"
            android:layout_centerInParent="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


        <TextView
            android:id="@+id/easy"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"

            />
        <TextView
            android:id="@+id/easypoints"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(5 points) "
            android:textSize="11sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/green"
            android:layout_below="@+id/easy"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:textStyle="italic"
            android:layout_alignParentStart="true"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_easy"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/easypoints"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:layout_below="@+id/rc_easy"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true"
            />


        <TextView
            android:id="@+id/medium"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/yelloworange"
            android:layout_below="@+id/rc_easy"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"

            />
        <TextView
            android:id="@+id/mediumpoints"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(10 points) "
            android:textSize="11sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/yelloworange"
            android:layout_below="@+id/medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:textStyle="italic"
            android:layout_alignParentStart="true"

            />

                <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_medium"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/mediumpoints"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yelloworange"
            android:layout_below="@+id/rc_medium"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/hard"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/light_red"
            android:layout_below="@+id/rc_medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"

            />
        <TextView
            android:id="@+id/hardpoints"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(15 points) "
            android:textSize="11sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/light_red"
            android:layout_below="@+id/hard"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:textStyle="italic"
            android:layout_alignParentStart="true"

            />

                <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_Hard"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/hardpoints"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_red"
            android:layout_below="@+id/rc_Hard"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true"
            />




            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

</FrameLayout>